#include<opencv2/core/core.hpp>
#include<opencv2/imgproc/imgproc.hpp>
#include<opencv2/highgui/highgui.hpp>
#include<cstdio>
#include<iostream>

using namespace std;
using namespace cv;

int main(int argc, const char **argv){
  VideoCapture video(argv[1]);
  namedWindow("test");
  Mat frame;
  while(1) {
    video >> frame;
    if(waitKey(30) >= 0)
      break;
    imshow("test",frame);
  }
  return 0;
}
